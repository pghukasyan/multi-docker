{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "pitbull959/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "pitbull959/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "pitbull959/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name" :"nginx",
            "image": "pitbull959/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client", "server"]

        }

    ]
}